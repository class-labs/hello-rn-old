{
  "name": "hello-rn",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "codegen": "apollo codegen:generate --target=typescript --tagName=gql --globalTypesFile src/__generated__/globalTypes.ts",
    "clean": "rm -rf __generated__ && find ./src -type d -name __generated__ -exec rm -rf \"{}\" +",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 .",
    "test": "npm run typecheck && npm run lint"
  },
  "dependencies": {
    "@apollo/client": "^3.7.4",
    "@react-navigation/native": "^6.1.2",
    "@react-navigation/native-stack": "^6.9.8",
    "@tamagui/font-inter": "^1.0.17",
    "@tamagui/lucide-icons": "^1.0.17",
    "@tamagui/shorthands": "^1.0.17",
    "@tamagui/theme-base": "^1.0.17",
    "expo": "~47.0.12",
    "expo-linear-gradient": "~12.0.1",
    "expo-splash-screen": "~0.17.5",
    "expo-status-bar": "~1.4.2",
    "react": "18.1.0",
    "react-native": "0.70.5",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.0",
    "react-native-svg": "13.4.0",
    "tamagui": "^1.0.17"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@types/react": "~18.0.24",
    "@types/react-native": "~0.70.6",
    "apollo": "^2.34.0",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^2.8.3",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
